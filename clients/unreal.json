            "extensions": [
                "XR_EXT_hand_tracking"
            ]
        },
        {
            "name": "OpenXREyeTracker",
            "abbreviation": "Eye Tracking",
            "extensions": [
                "XR_EXT_eye_gaze_interaction"
            ]
        },
        {
            "name": "OpenXRViveTracker",
            "abbreviation": "Vive Tracker",
            "extensions": [
                "XR_HTCX_vive_tracker_interaction"
